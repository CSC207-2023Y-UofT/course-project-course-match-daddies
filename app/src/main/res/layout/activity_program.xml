<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="407dp"
            android:layout_height="61dp"
            android:text="Recommended Programs"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="379dp"
            android:layout_height="260dp"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@color/navy_blue"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_marginTop="16dp"
            android:background="@color/dark_red"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_selection"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/program_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Title"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/program_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/template_program_code"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/program_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Description"
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/buttonCarousel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Back to Carousel" />

            <Button
                android:id="@+id/buttonCourse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Go to Course Page" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>